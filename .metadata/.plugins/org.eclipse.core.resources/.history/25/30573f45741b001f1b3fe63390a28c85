package Services;


import presentation.Combattant;
import Except.CombattantException;

import java.util.ArrayList;
import java.util.List;

public class GestionCombattantsImplement implements GestionCombattant {
    private List<Combattant> combattants = new ArrayList<>();

    @Override
    public void ajouterCombattant(Combattant combattant) {
        combattants.add(combattant);
        System.out.println("Combattant ajouté: " + combattant.getNom());
    }

    @Override
    public void supprimerCombattant(Combattant combattant) {
        if (combattants.remove(combattant)) {
            System.out.println("Combattant supprimé: " + combattant.getNom());
        } else {
            System.out.println("Le combattant n'a pas été trouvé.");
        }
    }

    @Override
    public void modifierCombattant(Combattant combattant) throws CombattantException {
        for (int i = 0; i < combattants.size(); i++) {
            if (combattants.get(i).getNom().equals(combattant.getNom())) {
                combattants.set(i, combattant);
                System.out.println("Combattant modifié: " + combattant.getNom());
                return;
            }
        }
        throw new CombattantException("Combattant non trouvé: " + combattant.getNom());
    }

    public Combattant chercherCombattant(String nom) throws CombattantException {
        for (Combattant combattant : combattants) {
            if (combattant.getNom().equals(nom)) {
                return combattant;
            }
        }
        throw new CombattantException("Combattant non trouvé: " + nom);
    }

    public List<Combattant> listerCombattants() {
        return new ArrayList<>(combattants);
    }
}

