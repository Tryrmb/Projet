package Services;

import presentation.Combattant;
import presentation.Club;

import java.util.HashMap;
import java.util.Map;

public class GestionSportif {
    private Map<String, String> identifiants;

    public GestionSportif() {
        identifiants = new HashMap<>();
        // Remplissez la map avec les identifiants des sportifs pour la vérification
        // Ex : identifiants.put("nomUtilisateur", "motDePasse");
        identifiants.put("John Berger", "password123");
        // Ajoutez d'autres utilisateurs ici
    }

    public boolean verifierIdentite(String nomUtilisateur, String motDePasse) {
        return identifiants.containsKey(nomUtilisateur) && identifiants.get(nomUtilisateur).equals(motDePasse);
    }

    public void mettreAJourInfo(Combattant combattant, String champ, String nouvelleValeur) {
        switch (champ.toLowerCase()) {
            case "poids":
                combattant.setPoids(Integer.parseInt(nouvelleValeur));
                break;
            case "taille":
                combattant.setTaille(Integer.parseInt(nouvelleValeur));
                break;
            case "palmares":
                combattant.setPalmares(nouvelleValeur);
                break;
            case "club":
                combattant.setClub(Club.valueOf(nouvelleValeur.toUpperCase()));
                break;
            // Ajoutez d'autres champs si nécessaire
            default:
                System.out.println("Champ inconnu.");
        }
    }
}
